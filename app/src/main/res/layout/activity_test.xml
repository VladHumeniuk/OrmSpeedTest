<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/simpleCreate1000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simple insert 1000 (Slow)"/>

        <Button
            android:id="@+id/simpleCreate10000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simple insert 10000 (Slow)"/>

        <Button
            android:id="@+id/simpleCreate50000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simple insert 50000 (Slow)"/>

        <Button
            android:id="@+id/simpleCreateBulk1000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simple insert Bulk 1000"/>

        <Button
            android:id="@+id/simpleCreateBulk10000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simple insert Bulk 10000"/>

        <Button
        android:id="@+id/simpleCreateBulk50000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple insert Bulk 50000"/>

        <Button
            android:id="@+id/read1000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simple read 1000"/>

        <Button
            android:id="@+id/read10000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simple read 10000"/>
        <Button
            android:id="@+id/read50000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simple read 50000"/>

        <TextView
            android:id="@+id/result"
            android:textColor="#0AA"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result"/>
    </LinearLayout>

</ScrollView>